{
	"bsonType": "object",
	"required": ["goods_sn", "name", "remain_count"
	],
	"permission": {
		"read": "doc.is_on_sale == true",
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"goods_sn": {
			"bsonType": "string",
			"description": "商品的唯一货号",
			"title": "货号",
			"trim": "both"
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"title": "名称",
			"trim": "both"
		},
		"keywords": {
			"bsonType": "string",
			"description": "商品关键字，为搜索引擎收录使用",
			"title": "关键字",
			"trim": "both"
		},
		"goods_desc": {
			"bsonType": "string",
			"description": "商品详细描述",
			"title": "详细描述",
			"trim": "both"
		},
		"goods_thumb": {
			"bsonType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png",
			"description": "商品缩略图，用于在列表或搜索结果中预览显示",
			"title": "商品图片"
		},
		"remain_count": {
			"bsonType": "int",
			"description": "库存数量",
			"title": "库存数量"
		},
		"month_sell_count": {
			"bsonType": "int",
			"description": "月销量",
			"title": "月销量",
			"defaultValue": 0
		},
		"total_sell_count": {
			"bsonType": "int",
			"description": "总销量",
			"title": "总销量",
			"defaultValue": 0
		},
		"comment_count": {
			"bsonType": "int",
			"description": "累计评论数",
			"title": "评论数",
			"defaultValue": 0
		},
		"is_on_sale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"title": "是否上架",
			"defaultValue": false
		},
		"is_hot": {
			"bsonType": "bool",
			"description": "是否热销",
			"title": "是否热销",
			"defaultValue": false
		},
		"add_date": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"title": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"title": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"seller_note": {
			"bsonType": "string",
			"description": "商家备注，仅商家可见",
			"title": "商家备注",
			"trim": "both",
			"permission": {
				"read": false
			}
		}
	},
	"version": "0.0.1"
}
